<div class="box py-3 card-columns">
{{#messages}}
    <div class="card" style=" background-color: {{cardbackgroundcolor}}">
        <div class="card-body">
            <p class="card-text">{{message}}</p>
            <p class="card-text">{{#str}} postedby, local_greetings, {{firstname}} {{/str}}</p>
            <p class="card-text">
                <small class="text-muted">
                    {{#userdate}} {{timecreated}}, {{#str}} strftimedaydatetime, core_langconfig {{/str}} {{/userdate}}
                </small>
            </p>
            {{#candelete}}
                <a role="button" href="{{config.wwwroot}}/local/greetings/edit.php?id={{id}}">
                    {{#pix}} t/editinline, core, {{#str}} edit {{/str}} {{/pix}}
                </a>
                <a role="button" href="{{config.wwwroot}}/local/greetings/index.php?id={{id}}&action=del&sesskey={{sesskey}}">
                    {{#pix}} t/delete, core, {{#str}} delete {{/str}} {{/pix}}
                </a>
            {{/candelete}}
        </div>
    </div>
{{/messages}}
</div>
